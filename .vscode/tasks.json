{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "sync",
            "type": "shell",
            "command": ".\\dev\\sync.bat",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "access-server",
            "type": "shell",
            "command": ".\\server-carch.bat"
            
        },
        {
            "label": "access-server-linux",
            "type": "shell",
            "command": ".\\server-carch.sh"
        },
        {
            "label": "gcc",
            "command": "gcc",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${file}.exe"
            ], // 编译命令参数`r
            "problemMatcher": {
                "owner": "c",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "g++",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${file}.exe",
                "-std=c++11"
            ], // 编译命令参数
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}